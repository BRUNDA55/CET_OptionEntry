<%- include('partials/header') %> 
<%- include('partials/flash') %>


    <div class="mb-5">
        <h1 class="text-center"><%= admin[0].name %> - <%= admin[0].ID %></h1>
        <h4 class="text-center"><%= admin[0].address %></h3>
    </div>
    
    <table id="optionTable" class="table mb-5">
        <thead class="thead-dark">
            <th class="w-25">course ID</th>
            <th class="w-25">total credits</th>
            <th class="w-25"></th>
        </thead>
        <tbody>
            <% for(i=0; i<univ.length;i++) { %>
                <tr >
                    <td><%= univ[i].courseID %></td>
                    <td><%= univ[i].totalCredits %></td>
                    <td>
                        <form method="POST" action="/editCredits/<%= univ[i].ID %>/<%= univ[i].adminID %>/<%= univ[i].courseID %>">
                            <input type="number" placeholder="credits" name="credits">  <button class="btn btn-primary">edit</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
    
<div class="card my-4 border border-dark bg-light">
    <div class="card-body">
        <h2 class="text-center">ADD course</h2>
    <form method="POST" action="/addCourse/<%= admin[0].adminID %>/<%= admin[0].ID %>" class="px-5 ">
        <div class="mb-3">
            <label for="courseID" class="form-label">Course ID</label>
            <input type="text" placeholder="c29" name="courseID" id="courseID" class="form-control">
        </div>
        <div class="mb-3">
            <label for="totalCredits" class="form-label">Total Credits</label>
            <input type="number" name="credits"  id="totalCredits" class="form-control">
        </div>
        <button class="btn btn-success">submit</button>
    </form>
    </div>
</div>
<div id="back" class="mb-5">
    <a href="/" class="btn btn-danger">LOG OUT</a>
</div>


    










