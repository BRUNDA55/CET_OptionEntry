<%- include('partials/flash') %>
<div id="header" class="jumbotron">
    <h1 class="text-center">WELCOME TO OPTION ENTRY</h1>
</div>


<div id="option">
    <div id="details" class="w-50 mx-auto text-center">
        <h3 class="text-center my-3">Hi there, <%= student.fname %>  <%= student.mname %> <%= student.lname %></h3>
        <p>Student ID : <%= student.ID %></p>
        <p>email : <%= student.email %></p>
    </div>
    
</div>

<div class="card my-4 border border-dark">
    <div class="card-body">
        <h4>ADD new option</h4>
        <form method="POST" action="/insertNew/<%= student.ID %>">
            <div class="mb-3">
                <label for="pnumber" class="form-label">Preference Number</label>
                <input type="number" placeholder="preference number" name="number" id="pnumber" class="form-control">
            </div>
            <div class="mb-3">
                <label for="univ" class="form-label">University ID</label>
                <input type="text" name="univ" id="univ" class="form-control" placeholder="E025">
            </div>
            <div class="mb-3">
                <label for="course" class="form-label">Course ID</label>
                <input type="text" name="course" id="course" class="form-control" placeholder="c12">
            </div>
            <button class="btn btn-success">submit</button>
        </form>
    </div>
</div>

<div id="optionTable">
    <h3 class="text-center pb-2">Your Options</h3>
    <table class="table">
        <thead class="thead-dark">
            <th>preference number</th>
            <th>University ID</th>
            <th>Course ID</th>
            <th></th>
            <th></th>
        </thead>
        <tbody>
            <% for(p=0; p<preference.length;p++) { %>
                <tr style="background-color: rgb(247, 238, 242);">
                    <td><%= preference[p].Pnum %></td>
                    <td><%= preference[p].univID %></td>
                    <td><%= preference[p].courseID %></td>
                    <td><a href="/edit/<%= preference[p].studID %>/<%= preference[p].Pnum %>" class="btn btn-primary">edit</a></td>
                    <td><a href="/delete/<%= preference[p].studID %>/<%= preference[p].Pnum %>" class="btn btn-danger">delete</a></td>
                </tr>
                <% } %>
        </tbody>
    </table>
</div>





